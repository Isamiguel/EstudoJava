package Exercicio1;

import java.util.Scanner;

public class LacosConstantes {

	public static void main(String[] args) {
		
		Scanner ler = new Scanner(System.in);
		int num;
		
		System.out.println("Digite um numero:");
		num = ler.nextInt();
		
		System.out.println("\nDigite um numero:");
		num = ler.nextInt();
		
		if(num == 2) {
			System.out.println("O numero 2 é par e positivo ");
				
			System.out.println("\nDigite um numero:");
			num = ler.nextInt();
			
			if(num == -3) {
			System.out.println("\nO numero -3 é impar e negativo");
			
			System.out.println("\nDigite um numero:");
			num = ler.nextInt();
			
			if(num == -2) {
			System.out.println("\nO numero -2 é pare e negativo");
			
			System.out.println("\nDigite um numero:");
			num = ler.nextInt();
			
			if(num == 3) {
			System.out.println("\nO numero 3 é impar e positivo");
				
			}
			}
			}
		}

	}

}
